<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/play_button_disabled" />
            <stroke android:color="@color/play_button_stroke" android:width="@dimen/play_button_stroke" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/play_button_pressed" />
            <stroke android:color="@color/play_button_stroke" android:width="@dimen/play_button_stroke" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/play_button_default" />
            <stroke android:color="@color/play_button_stroke" android:width="@dimen/play_button_stroke" />
        </shape>
    </item>
</selector>